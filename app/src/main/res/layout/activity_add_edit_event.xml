<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvFormTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar/Editar Evento"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <!-- Campo Título del evento -->
            <EditText
                android:id="@+id/etEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título del evento"
                android:inputType="text"
                android:backgroundTint="#FF6200EE"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Fecha del evento -->
            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha (DD/MM/AAAA)"
                android:inputType="date"
                android:backgroundTint="#FF6200EE"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Hora del evento -->
            <EditText
                android:id="@+id/etEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora (HH:MM)"
                android:inputType="time"
                android:backgroundTint="#FF6200EE"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Ubicación del evento -->
            <EditText
                android:id="@+id/etEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ubicación"
                android:inputType="text"
                android:backgroundTint="#FF6200EE"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Descripción del evento -->
            <EditText
                android:id="@+id/etEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:backgroundTint="#FF6200EE"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnSaveEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="#FF6200EE"
                android:textColor="#FFFFFF"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:backgroundTint="#FF0000"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
